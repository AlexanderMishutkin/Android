<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">#f5bb98</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">#f5bb98</item>

    </style>

    <style name="style1" parent="@android:style/TextAppearance">
        <item name="android:textColor">#4682B4</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">serif</item>
    </style>
</resources>
